rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isPrimaryTeacher() {
      return isSignedIn() && request.auth.token.email == "richard.ketchersid@gmail.com";
    }

    function isTeacherByAllowlist() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/teacherEmails/$(request.auth.token.email));
    }

    function isTeacher() {
      return isPrimaryTeacher() || isTeacherByAllowlist();
    }

    function ownsClass(classId) {
      return classId is string
        && exists(/databases/$(database)/documents/classes/$(classId))
        && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
    }

    function isEnrolled(classId, studentId) {
      return classId is string
        && studentId is string
        && exists(/databases/$(database)/documents/classEnrollments/$(classId + "_" + studentId));
    }

    function canAccessClassData(classId, classData) {
      return classData.teacherId == request.auth.uid
        || isEnrolled(classId, request.auth.uid);
    }

    function quizExists(quizId) {
      return quizId is string
        && exists(/databases/$(database)/documents/quizzes/$(quizId));
    }

    function canReadQuizData(quizData) {
      return quizData.teacherId == request.auth.uid
        || (quizData.classId is string && isEnrolled(quizData.classId, request.auth.uid));
    }

    function canReadQuizById(quizId) {
      return quizExists(quizId)
        && canReadQuizData(get(/databases/$(database)/documents/quizzes/$(quizId)).data);
    }

    function ownsQuiz(quizId) {
      return quizId is string
        && exists(/databases/$(database)/documents/quizzes/$(quizId))
        && get(/databases/$(database)/documents/quizzes/$(quizId)).data.teacherId == request.auth.uid;
    }

    function canWriteQuizData(quizData) {
      return isTeacher()
        && quizData.teacherId == request.auth.uid
        && quizData.classId is string
        && quizData.classId != ""
        && ownsClass(quizData.classId)
        && quizData.questions is list;
    }

    match /teacherEmails/{email} {
      allow get: if isPrimaryTeacher()
        || (isSignedIn() && request.auth.token.email == email);

      allow list: if isPrimaryTeacher();

      allow create, update, delete: if isPrimaryTeacher();
    }

    match /userProfiles/{uid} {
      allow read: if isSignedIn()
        && (request.auth.uid == uid || isTeacher());

      allow create, update: if isSignedIn()
        && request.auth.uid == uid;

      allow delete: if false;
    }

    match /classes/{classId} {
      allow read: if isSignedIn()
        && canAccessClassData(classId, resource.data);

      allow create: if isTeacher()
        && request.resource.data.teacherId == request.auth.uid
        && request.resource.data.name is string;

      allow update: if isTeacher()
        && resource.data.teacherId == request.auth.uid
        && request.resource.data.teacherId == request.auth.uid;

      allow delete: if isTeacher()
        && resource.data.teacherId == request.auth.uid;
    }

    match /classEnrollments/{enrollmentId} {
      allow read: if (isSignedIn() && resource.data.studentId == request.auth.uid)
        || (isTeacher() && ownsClass(resource.data.classId));

      allow create: if isTeacher()
        && request.resource.data.classId is string
        && request.resource.data.studentId is string
        && enrollmentId == request.resource.data.classId + "_" + request.resource.data.studentId
        && ownsClass(request.resource.data.classId);

      allow update: if isTeacher()
        && resource.data.classId == request.resource.data.classId
        && resource.data.studentId == request.resource.data.studentId
        && ownsClass(resource.data.classId);

      allow delete: if isTeacher()
        && ownsClass(resource.data.classId);
    }

    match /quizzes/{quizId} {
      allow read: if isSignedIn()
        && canReadQuizData(resource.data);

      allow create: if canWriteQuizData(request.resource.data);

      allow update: if canWriteQuizData(request.resource.data)
        && resource.data.teacherId == request.auth.uid
        && request.resource.data.teacherId == request.auth.uid;

      allow delete: if isTeacher()
        && resource.data.teacherId == request.auth.uid;
    }

    match /submissions/{submissionId} {
      allow create: if isSignedIn()
        && request.resource.data.studentId == request.auth.uid
        && request.resource.data.quizId is string
        && canReadQuizById(request.resource.data.quizId);

      allow read: if (isSignedIn()
          && resource.data.studentId == request.auth.uid
          && canReadQuizById(resource.data.quizId))
        || ownsQuiz(resource.data.quizId);

      allow delete: if ownsQuiz(resource.data.quizId);

      allow update: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
